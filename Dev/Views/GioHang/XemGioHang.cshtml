@using webmaylanh.Models
@model List<ItemGioHang>
@{
    ViewBag.Title = "Xem Giỏ Hàng";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h2 style="font-family:'Times New Roman';text-align:center"><strong> GIỎ HÀNG CỦA BẠN</strong></h2><br />
<div class="cart-items">
    <div class="in-check">
        <div class="container">
            @if (Model == null || Model.Count == 0)
            {
                <p style="font-size:2em;padding:10px;margin:10px"> Giỏ hàng rổng !! </p>
                <a href="@Url.Action("Index","Home")" style="font-size:2em;padding:10px;margin:10px"> Vui lòng quay trở lại trang chủ để mua hàng !! </a>
            }
            else
            {
                <div class="table-responsive">
                    <table class=" table table-striped table-bordered table table-condensed">
                        <tr style="text-align:center">
                            <td>Mã sản phẩm</td>
                            <td>Tên Sản Phẩm</td>
                            <td>Hình Ảnh</td>
                            <td>Số Lượng</td>
                            <td>Đơn Giá</td>
                            <td>Giảm Giá</td>
                            <td>Thành Tiền</td>
                            <td>Cập Nhật Giỏ Hàng</td>
                            <td>Xóa Giỏ Hàng</td>

                        </tr>
                        <tbody>
                            @{
                                double? total = 0;
                            }
                            @foreach (var item in Model)
                            {
                                var thanhtien = item.SoLuong * item.DonGia * (1 - item.GiamGia);
                                total += thanhtien;
                                <tr style="text-align:center">
                                    <td>@item.SanPhamID</td>
                                    <td>@item.TenSanPham</td>
                                    <td><img src="@Url.Content("~/" +item.HinhAnh)" style="height:200px;width:150px" /></td>
                                    <td>@item.SoLuong</td>
                                    <td>@string.Format("{0:0,0 VNĐ}", item.DonGia).Replace(",", ".")</td>
                                    <td>@Html.FormatValue(item.GiamGia, "{0:p}")</td>
                                    <td>@string.Format("{0:0,0 VNĐ}", @thanhtien).Replace(",", ".")</td>
                                    <td>@Html.ActionLink("Cập Nhật", "SuaGioHang", new { @SanPhamID = item.SanPhamID }, new { @class = "btn btn-success" })</td>
                                    <td>@Html.ActionLink("Xóa Giỏ Hàng", "XoaGioHang", new { @SanPhamID = item.SanPhamID }, new { @class = "btn btn-danger" })</td>
                                </tr>
                            }
                        <tbody>

                        <tfoot>
                            <tr>
                                <td colspan="15" class="text-right">
                                    <strong>Tổng tiền: @string.Format("{0:0,0 VNĐ}", total).Replace(",", ".")</strong>
                                </td>
                            </tr>
                        </tfoot>

                    </table>                    
                        <div class="table-responsive" style=" text-align:right;padding:10px">
                            <a href="@Url.Action("Index", "Home")" class="table-responsive btn-info" style="padding:10px">Mua Tiếp</a>
                            @Html.ActionLink("Đặt Mua", "DatHang", "GioHang", new { @class = "btn btn-warning" })                       
                        </div>
                    @*}*@
                </div>
            }
        </div>
    </div>
</div>

