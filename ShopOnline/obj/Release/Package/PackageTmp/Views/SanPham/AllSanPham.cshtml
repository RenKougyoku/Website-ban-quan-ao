@using ShopOnline.Models;
@*@model IEnumerable<ShopOnline.Models.SanPham>*@
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>


@{
    ViewBag.Title = "AllSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

<div class="row">

    <div class="new-arrivals-w3agile">
        <div class="container">
            @foreach (var item in Model)
            {


                <div class="col-xs-6 col-lg-3 col-sm-4">
                    <div class="grid-arr">
                        <div class="grid-arrival">
                            <div class="thumbnail">
                                <figure>
                                    <a href="@Url.Action("ChiTietSanPham","SanPham", new {@Id=item.SanPhamID})">
                                        <div class="grid-img">
                                            <img src="@item.Hinh" width="264" height="291" alt="@item.Ten"> 
                                        </div>

                                    </a>
                                </figure>


                                <div class="women">



                                    <h5 style="text-align: center">
                                        <span style="font-weight:bold"></span>@item.Ten
                                    </h5>
                                    <br />
                                    <h5 style="text-align: center">
                                        <span style="font-weight:bold"></span>@item.GiaBan
                                    </h5>

                                   
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>

            }
        </div>

    </div>
</div>

@*Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount;*@
<div class="MenuTrang">
    @Html.PagedListPager(Model, page=>Url.Action("AllSanPham", new{page=page}))

</div>
