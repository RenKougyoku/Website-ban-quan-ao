@model ShopOnline.Models.UserLoginViewModel

@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("CheckLogin","UserAccount",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
<!--content-->
<div class="content">
    <!--login-->
    <div class="login">
        <div class="main-agileits">
            <div class="form-w3agile">
                <h3>Đăng nhập vào LVQ</h3>
                <form action="#" method="post">
                    <div class="key">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input type="text" value="" name="LoginName" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'LoginName'; }" required="" placeholder="UserName">
                        <div class="clearfix"></div>
                    </div>
                    <div class="key">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <input type="password" value="" name="Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}" required="" placeholder="Password">
                        <div class="clearfix"></div>
                    </div>
                    <input type="submit" value="Login" class="btn btn-default" />
                </form>
            </div>
            <div class="forg">
                <div class="forg-left">
                    @Html.ActionLink("Trở về", "Index", "Home")
                </div>
                @*<a href="#" class="forg-left">Quên mật khẩu</a>*@
                <a href="@Url.Action("UserRegister")" class="forg-right">Đăng kí</a>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--login-->
</div></div>
