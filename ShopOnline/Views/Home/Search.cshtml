
@using ShopOnline.Models;
@model PagedList.PagedList<SanPham>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Kết quả tìm kiếm ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<div class="row">
    <div class="new-arrivals-w3agile">

        <div class="container">
            @foreach (var item in Model)
            {


                <div class="col-xs-6 col-lg-3 col-sm-4">
                    <div class="grid-arr">
                        <div class="grid-arrival">
                            <div class="thumbnail">
                                <figure>
                                    <a href="@Url.Action("ChiTietSanPham","SanPham", new {@Id=item.SanPhamID})">
                                        <div class="grid-img">
                                            <img src="@item.Hinh" width="264" height="291" alt="@item.Ten">
                                        </div>

                                    </a>
                                </figure>


                                <div class="women">



                                    <h5 style="text-align: center">
                                        <span style="font-weight:bold"></span>@item.Ten
                                    </h5>
                                    <br />
                                    <h5 style="text-align: center">
                                        <span style="font-weight:bold"></span>@item.GiaBan
                                    </h5>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>

            }
        </div>

    </div>
</div>

<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Search", new { page = page }))

</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>










